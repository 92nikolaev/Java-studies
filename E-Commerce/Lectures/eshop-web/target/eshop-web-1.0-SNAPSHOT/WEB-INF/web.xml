<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>DATABASE_URL</param-name>
        <param-value>jdbc:mysql://localhost:3306/mysql?useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>DATABASE_USER</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>DATABASE_PASSWORD</param-name>
        <param-value>password</param-value>
    </context-param>

    <!-- Minimalistic descriptor for servlet deployment on tomcat-->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>by.it.academy.MyServlet</servlet-class>
        <init-param>
            <param-name>DEBUG_LEVEL</param-name>
            <param-value>ERROR</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/fio</url-pattern>
    </servlet-mapping>

    <!-- Second servlet for include example -->
    <servlet>
        <servlet-name>HeaderServlet</servlet-name>
        <servlet-class>by.it.academy.HeaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeaderServlet</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>

    <!-- Login servlet for e-shop -->
    <servlet>
        <servlet-name>LoginActionServlet</servlet-name>
        <servlet-class>by.it.academy.LoginActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginActionServlet</servlet-name>
        <url-pattern>/login_action</url-pattern>
    </servlet-mapping>

    <!-- Catalog servlet prepares list of the products for e-shop -->
    <servlet>
        <servlet-name>CatalogServlet</servlet-name>
        <servlet-class>by.it.academy.CatalogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogServlet</servlet-name>
        <url-pattern>/get_catalog</url-pattern>
    </servlet-mapping>

    <!-- Login pages -->
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login_error</servlet-name>
        <jsp-file>/WEB-INF/jsp/login_error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_error</servlet-name>
        <url-pattern>/login_error.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login_ok</servlet-name>
        <jsp-file>/WEB-INF/jsp/login_ok.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_ok</servlet-name>
        <url-pattern>/login_ok.html</url-pattern>
    </servlet-mapping>

    <!-- Catalog page for e-shop -->
    <servlet>
        <servlet-name>catalog</servlet-name>
        <jsp-file>/jsp/catalog.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalog</servlet-name>
        <url-pattern>/catalog.html</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>MyFirstFilter</filter-name>
        <filter-class>by.it.academy.filter.MyFirstFilter</filter-class>
        <init-param>
            <param-name>enable_logging</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>MySecondFilter</filter-name>
        <filter-class>by.it.academy.filter.SecondFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MyFirstFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MySecondFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-role>
        <role-name>power-user</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>e-shop application</realm-name>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>MyServlet</web-resource-name>
            <url-pattern>/fio</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>power-user</role-name>
        </auth-constraint>
    </security-constraint>
    <!--
    Please add in %TOMCAT_HOME%\conf\tomcat-users.xml
    the following:
    <role rolename="power-user"/>
    <user username="Administrator" password="12345678" roles="power-user"/>
    -->
</web-app>